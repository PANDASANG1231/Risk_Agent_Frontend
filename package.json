{
  "name": "risk-agent-frontend",
  "version": "1.0.0",
  "description": "Advanced Financial Risk Analysis Dashboard with Python Flask Backend",
  "main": "index.html",
  "scripts": {
    "start": "python -m pip install -r requirements.txt && python api_server.py",
    "dev": "python -m pip install -r requirements.txt && python api_server.py",
    "test": "python -m pytest tests/",
    "build:css": "tailwindcss -i ./src/input.css -o ./static/css/output.css --minify",
    "watch:css": "tailwindcss -i ./src/input.css -o ./static/css/output.css --watch",
    "dev:css": "tailwindcss -i ./src/input.css -o ./static/css/output.css --watch",
    "setup": "bash setup_js_environment.bash && npm run build:css"
  },
  "keywords": [
    "risk-analysis",
    "financial-analysis",
    "dashboard",
    "flask",
    "python",
    "html",
    "tailwindcss",
    "plotly",
    "data-visualization"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "."
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "live-server": "^1.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "lucide": "^0.263.0",
    "plotly.js": "^2.27.0",
    "d3": "^7.8.5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
